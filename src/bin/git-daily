#!@php_bin@
<?php
/**
 *  @package    Git_Daily
 *  @author     sotarok
 *  @license    The BSD License
 */

if (!ini_get('register_argc_argv')) {
    echo <<<E
git-daily: Fatal: please enable register_argv_argc on your php.ini.
E;
    exit(254);
}

ini_set('max_execution_time', 0);
ini_set('memory_limit', -1);
set_include_path(dirname(dirname(__FILE__)) . PATH_SEPARATOR . get_include_path());

require_once 'Git/Daily/ClassLoader.php';
$cl = new Git_Daily_ClassLoader('Git_Daily', Git_Daily_ClassLoader::getSrcPath());
$cl->register();

$git_daily = new Git_Daily(new Git_Daily_CommandUtil());

$output = new Git_Daily_ConsoleOutput();
$retval = $git_daily->run($argv, $output);
if ($retval != 0) {
    exit($retval);
}
